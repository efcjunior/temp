<%- include('../partials/header.ejs')%>
<ol class="breadcrumb">
    <li><a href="./consulta">Continuidade</a></l
    <li class="active">Consulta</li>
  </ol>
<div class="row">
    <div class="row col-sm-6">    
        <div class="row col-sm-12">
        <form method="POST">
            <div class="form-group">
            <label for="tipo">Tipo</label>
            <select class="form-control" id="tipo" name="tipo">
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>8</option>
                <option selected>13</option>
                <option>21</option>
            </select>
            </div>
            <div class="form-group">
            <label for="valor">Valor</label>
            <textarea id="valor" name="valor" class="form-control" rows="21"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        </form>  
    </div> 
    </div>
    <% if (typeof resposta != 'undefined') {%>
    <div class="row col-sm-6"> 
        <div class="row col-sm-12">
            <h3>Total Encontrado: <%= resposta.log%></h3>
        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    <th>DH</th>
                    <th>Min</th>
                    <th>Max</th>
                </tr>
                <% resposta.continuidade.forEach(e => { %>
                <tr>
                    <td><%- e.dh%></td>
                    <td><%- e.min%></td>
                    <td><%- e.max%></td>
                </tr>
                <% }) %>
            </table>           
        </div>
    </div>
    </div>
    </div>
    <% } %>

<%- include('../partials/footer.ejs')%>
